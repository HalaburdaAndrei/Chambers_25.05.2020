<aura:component description="PublicationTarget" controller="PublicationTargetController" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global">

    <aura:attribute name="data" type="Object"/>
    <aura:attribute name="columns" type="List"/>
    <aura:attribute name="errors" type="Object" default="[]"/>
    <aura:attribute name="draftValues" type="Object" default="[]"/>
    <aura:attribute name="sortDirection" type="String" default="asc" />
    <aura:attribute name="defaultSortDirection" type="String" default="asc" />
    <aura:attribute name="sortedBy" type="String" />
    <aura:attribute name="selectedLookUpRecords" type="sObject[]" default="[]"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <div class="slds-box slds-color__background_gray-1 slds-is-relative">

    <div class="slds-p-around_medium">
        <h1 class="slds-text-heading_large">Publication Target</h1>
    </div>
    <div class="slds-p-bottom--x-large slds-p-left--medium ">
        <div class="slds-size_1-of-3">
    <c:lookupPublication objectAPIName="Publication__c"
                    IconName="standard:account"
                         lstSelectedRecords="{!v.selectedLookUpRecords}"
                    label="Publication Name"/>
        </div>
        <div class="slds-var-m-x-small ">
            <lightning:button variant="brand" label="Add Publication" onclick="{!c.addPublication }"/>
        </div>
    </div>


    <div style="height: 200px">
        <lightning:datatable
                columns="{! v.columns }"
                data="{! v.data }"
                keyField="Id"
                errors="{! v.errors }"
                draftValues="{! v.draftValues }"
                onsave="{! c.handleSaveEdition }"
                sortedDirection="{!v.sortDirection}"
                sortedBy="{!v.sortedBy}"
                onsort="{!c.handleSort}"
        />
    </div>
    </div>

</aura:component>